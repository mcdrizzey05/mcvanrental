<div class="container">
  <div class="row">
    <div class="col pt-4 d-flex justify-content-start">
      <h1><%= @offer.title %></h1>
    </div>
    <div class="col pt-5 d-flex justify-content-end">
      <h4>â‚¬<%= @offer.price %>/night</h4>
    </div>
  </div>
  <div class="row">
    <div class="col d-flex justify-content-start">
      <p>Located in: <%= @offer.location %>, Germany</p>
    </div>
    <div class="col d-flex justify-content-end">
      <p>Offered by: <%= @offer.user.name %></p>
    </div>
  </div>

  <div class="row offer-img" style="background-image: url('<%= cl_image_path @offer.photo.key %>')">
    <div class="col offer-btn">
      <div class="description-card">
      <%= @offer.description %>
      </div>
      <div class="description-card">
      <%= simple_form_for [@offer, @booking] do |f| %>
        <%= f.input :start_date, as: :date, html5: true %>
        <%= f.input :end_date, as: :date, html5: true %>
        <%= f.submit "Book now" %>
      <% end %>
      </div>
      </div>
    </div>
  </div>
</div>
